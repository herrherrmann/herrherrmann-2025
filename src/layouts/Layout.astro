---
import '@fontsource-variable/chivo'
import '@fontsource/space-mono'
import H1 from '../components/H1.astro'
import GlobalStyles from '../components/SiteLayout/GlobalStyles.astro'
import Header from '../components/SiteLayout/Header.astro'
import Footer from '../components/SiteLayout/Footer.astro'
import Main from '../components/SiteLayout/Main.astro'

interface Props {
    pageTitle: string
    pageDescription?: string
    ogImage?: string
    ogType?: 'website' | 'article'
    /** e.g. "2024-12-01T09:33:20+00:00" */
    ogArticlePublishedTime?: string
    // TODO: Properly inherit this type from Astro.
    frontmatter?: {
        title: string
    }
}

const { pageTitle, pageDescription, ogImage, ogType = 'website', ogArticlePublishedTime, frontmatter } = Astro.props
const siteName = 'Herr Herrmann'
const pageTitleOrFrontmatterTitle = frontmatter?.title || pageTitle
const fullTitle = [pageTitleOrFrontmatterTitle, siteName].filter(Boolean).join(' â€“ ')
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="alternate" type="application/rss+xml" title="Herr Herrmann" href={new URL('rss.xml', Astro.site)} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{fullTitle}</title>
        {pageDescription && <meta name="description" content={pageDescription} />}
        <meta property="og:title" content={fullTitle} />
        {pageDescription && <meta property="og:description" content={pageDescription} />}
        <meta property="og:type" content={ogType} />
        {ogImage && <meta property="og:image" content={ogImage} />}
        {ogArticlePublishedTime && <meta property="article:published_time" content={ogArticlePublishedTime} />}
        <meta property="og:site_name" content={siteName} />
        <meta property="og:locale" content="en_US" />
        <meta name="generator" content={Astro.generator} />
        <meta name="author" content="Sebastian Herrmann" />
    </head>
    <body>
        <GlobalStyles />
        <div class="layout">
            <Header />
            <Main>
                {frontmatter?.title ? <H1>{frontmatter.title}</H1> : null}
                <slot />
            </Main>
            <Footer />
        </div>
    </body>
</html>

<style>
    .layout {
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>
