<style is:global>
    :root {
        --font-family-content: 'Chivo Variable', sans-serif;
        --font-family-headlines: 'Space Mono', monospace;
        --font-size-regular: 17px;
        --font-size-small: 0.8rem;
        --line-height-default: 1.5;
        --font-weight-normal: 400;
        --font-weight-bold: 700;
        --border-radius: 4px;

        --page-max-width: 800px;
        --page-padding: 0.75rem;

        --light-color: #eae6db;
        /* --light-color-alt: #e0dcd1; */
        --text-color: #505157;
        --text-color-active: #3b3b40;
        --accent-color: #f06c02;
        --accent-color-dark: #a05f2d;
        --accent-color-subdued: hsl(from var(--accent-color) h s l / 0.4);
        --selection-color: hsl(from var(--accent-color) h s l / 0.2);

        @media (prefers-color-scheme: dark) {
            --light-color: #3b3b40;
            --text-color: #efefef;
            --text-color-active: #ffffff;
            --accent-color: #f06c02;
            --accent-color-dark: #a05f2d;
            --accent-color-subdued: hsl(from var(--accent-color) h s l / 0.4);
            --selection-color: hsl(from var(--accent-color) h s l / 0.2);
        }
    }
    * {
        box-sizing: border-box;
    }
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: var(--font-family-content);
        font-size: var(--font-size-regular);
        line-height: var(--line-height-default);
        color: var(--text-color);
        background-color: var(--light-color);
    }
    h1 {
        font-family: var(--font-family-headlines);
        font-size: 1.5rem;
        margin: 2rem 0 0.5rem 0;
    }
    h2 {
        font-family: var(--font-family-headlines);
        font-size: 1.3rem;
        margin: 2rem 0 0.5rem 0;
    }
    h3 {
        font-family: var(--font-family-headlines);
        font-size: 1.2rem;
        margin: 2rem 0 0.5rem 0;
    }
    h4 {
        font-family: var(--font-family-headlines);
        font-size: 1rem;
        font-weight: var(--font-weight-bold);
        margin: 1rem 0 0.2rem 0;
    }
    p {
        margin: 0 0 0.75rem 0;
    }
    p:last-child {
        margin: 0;
    }
    a {
        color: var(--text-color);
        word-break: break-word;
        text-decoration: underline;
        text-decoration-color: var(--accent-color-subdued);
        text-decoration-thickness: 0.12em;
        text-underline-offset: 0.18em;
        transition: text-decoration 100ms;
    }
    a:hover {
        text-decoration-color: var(--accent-color);
    }
    ul,
    ol {
        margin: 0 0 0.75rem 0;
        padding: 0 0 0 1rem;
    }
    ul ul,
    ol ol {
        margin: 0;
    }
    figure {
        margin: 0 0 0.75rem 0;
    }
    figcaption {
        text-align: center;
        font-size: var(--font-size-small);
    }
    blockquote {
        margin: 1rem 0 1rem 0;
        padding: 0.25rem 0 0.25rem 1rem;
        border-left: 2px solid hsl(from var(--text-color) h s l / 0.25);
    }
    ::selection {
        background-color: var(--selection-color);
    }
    ::-moz-selection {
        background-color: var(--selection-color);
    }
</style>
