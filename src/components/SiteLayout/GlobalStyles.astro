<style is:global>
    :root {
        --font-family-content: 'Chivo Variable', sans-serif;
        --font-family-headlines: 'Space Mono', monospace;
        --font-size-regular: 17px;
        --font-size-small: 0.8rem;
        --line-height-default: 1.5;
        --font-weight-normal: 400;
        --font-weight-bold: 700;
        --border-radius: 4px;

        --page-max-width: 800px;
        --page-padding: 0.75rem;

        --light-color: #eae6db;
        /* --light-color-alt: #e0dcd1; */
        --text-color: #505157;
        --accent-color: #f06c02;
        --accent-color-dark: #a05f2d;
        --accent-color-subdued: hsl(from var(--accent-color) h s l / 0.4);
        --selection-color: hsl(from var(--accent-color) h s l / 0.2);

        @media (prefers-color-scheme: dark) {
            --light-color: #355070;
            --text-color: #efefef;
        }
    }
    h1 {
        font-family: var(--font-family-headlines);
        font-size: 1.75rem;
        margin: 2rem 0 0.5rem 0;
    }
    h2 {
        font-family: var(--font-family-headlines);
        font-size: 1.5rem;
        margin: 2rem 0 0.5rem 0;
    }
    h3 {
        font-family: var(--font-family-headlines);
        font-size: 1.2rem;
        margin: 2rem 0 0.5rem 0;
    }
    p {
        margin: 0;
    }
    :where(p, figure) + p {
        margin: 0.75rem 0 0 0;
    }
    a {
        color: var(--text-color);
        word-break: break-word;
        text-decoration: underline;
        text-decoration-color: var(--accent-color-subdued);
        text-decoration-thickness: 0.12em;
        text-underline-offset: 0.18em;
        transition: text-decoration 100ms;
    }
    a:hover {
        text-decoration-color: var(--accent-color);
    }
    ul {
        margin: 0;
        padding: 0 0 0 1rem;
    }
    figure {
        margin: 0;
    }
    figcaption {
        text-align: center;
        font-size: var(--font-size-small);
    }
    ::selection {
        background-color: var(--selection-color);
    }
    ::-moz-selection {
        background-color: var(--selection-color);
    }
</style>
