---
import { getCollection } from 'astro:content'
import Layout from '../layouts/Layout.astro'

const posts = await getCollection('blog')
---

<Layout>
    <h1>Blog</h1>
    <ul>
        {
            posts.map((post) => (
                <li>
                    <a href={`/blog/${post.data.slug}`}>{post.data.title}</a>
                </li>
            ))
        }
    </ul>
</Layout>
