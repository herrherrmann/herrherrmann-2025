---
import H1 from '../components/H1.astro'
import PhotoGallery, { type PhotoGalleryImage } from '../components/PhotoGallery.astro'
import Layout from '../layouts/Layout.astro'
import barcelona from '../data/photos/barcelona.jpg'
import berlin from '../data/photos/berlin.jpg'
import takao from '../data/photos/takao.jpg'
import waves from '../data/photos/waves.jpg'
import guatemala from '../data/photos/guatemala.jpg'
import forest from '../data/photos/forest.jpg'

function getImage(image: ImageMetadata, alt: string): PhotoGalleryImage {
    return {
        // @ts-expect-error type issue with astro-carousel
        src: image,
        alt,
        format: image.format,
        width: image.width,
        height: image.height,
    }
}

const images: PhotoGalleryImage[] = [
    getImage(
        barcelona,
        'A building with balconies and some plants peeking from the top, and a blue sky in the background.'
    ),
    getImage(
        berlin,
        'A high view of a roundabout street with some cars on it. The background shows Berlinâ€™s skyline with the TV tower and some other buildings.'
    ),
    getImage(
        takao,
        'A mountain scene with some peaks peeking through dense fog. The peaks are filled with pointy trees.'
    ),
    getImage(waves, 'A river splashing through some coarse rocks.'),
    getImage(guatemala, 'Some older buildings in front of a new fancy-looking higher building.'),
    getImage(forest, 'A dramatic angle in a forest full of leaf-less trees and some mossy bits on the ground.'),
]
---

<Layout pageTitle="Photos">
    <H1>Photos</H1>
    <p>
        I love taking pictures during trips, concerts or just on a random stroll through the city.<br />You can find a
        selection of my photos on <a href="https://unsplash.com/@herrherrmann">Unsplash</a>.
    </p>
    <PhotoGallery images={images} />
    <h2>Equipment</h2>
    <p>
        <ul>
            <li>Fuji X-T3</li>
            <ul>
                <li>Fuji XF 16-55mm F2.8</li>
                <li>Fuji XF 35mm F1.4</li>
                <li>Fuji XF 55-200mm F3.5-4.8</li>
            </ul>
            <li>Lomo LC-1</li>
            <li>Polaroid Impulse Portrait</li>
        </ul>
    </p>
    <p>
        <h2>Former equipment</h2>
        <ul>
            <li>Canon EOS 6D</li>
            <ul>
                <li>Sigma 24-70mm F2.8</li>
                <li>Sigma 70-200mm F2.8</li>
                <li>Canon 50mm F1.4</li>
            </ul>
            <li>Canon EOS 600D</li>
            <ul>
                <li>Sigma 17-50mm F2.8</li>
                <li>Canon 50mm F1.8 II</li>
            </ul>
            <li>Canon EOS 450D</li>
            <li>Nikon AW-100S</li>
        </ul>
    </p>
</Layout>
